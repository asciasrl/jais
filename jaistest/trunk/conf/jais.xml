<?xml version="1.0" encoding="ISO-8859-1" ?>
<!-- commento -->
<jais>
  <modules>
    <module>
      <name>HTTPServer</name>
      <class>it.ascia.ais.HTTPServerControllerModule</class>
    </module>
    <module>
      <name>EDS</name>
      <class>it.ascia.eds.EDSControllerModule</class>
    </module>
    <module>
      <name>AUI</name>
      <class>it.ascia.aui.AUIControllerModule</class>
    </module>
  </modules>
  <HTTPServer>
    <port>80</port>
    <root>../aui</root>    
  </HTTPServer>
  <EDS>
    <connectors>
      <connector>
        <name>0</name>
        <transport>
          <type>serial</type>
          <port>COM2</port>
          <speed>9600</speed>
        </transport>
		    <computer>0</computer>
		    <discover>3;4;5;6;7</discover> 
      </connector>
    </connectors> 
  </EDS>      
  <AUI>
    <startPage>pianoT</startPage>
    <title>ASCIA HomeInTheBox [AUI 0.1]</title>
    <!-- definizione di tutti i tipi di controlli -->
    <controls>
      <page>
        <src>images/key_back.png</src>
      </page>    
      <light>
        <src>images/luce_off.png</src>
        <on>images/luce_on.png</on>
        <off>images/luce_off.png</off>  
      </light>
      <dimmer>
        <src>images/luce_off.png</src>
        <on>images/luce_on.png</on>
        <off>images/luce_off.png</off>
        <up>images/luce_up.png</up>
        <down>images/luce_down.png</down>  
      </dimmer>
      <blind>
        <src>images/serranda_ferma.png</src>
        <stopped>images/serranda_ferma.png</stopped>
        <open>images/serranda_open.png</open>
        <opening>images/serranda_sale.png</opening>
        <opened>images/serranda_opened.png</opened>
        <close>images/serranda_close.png</close>
        <closing>images/serranda_scende.png</closing>
        <closed>images/serranda_closed.png</closed>
      </blind>
    </controls>
    <!-- definizione di tutti i layers utilizzabili nelle mappe -->
    <layers>
      <scenari>
        <icon>images/scenari.png</icon>
      </scenari>
      <illuminazione>
        <icon>images/illuminazione.png</icon>
      </illuminazione>
      <serramenti>
        <icon>images/serramenti.png</icon>
      </serramenti>
      <sicurezza>
        <icon>images/serramenti.png</icon>
      </sicurezza>
      <video>
        <icon>images/video.png</icon>
      </video>
      <clima>
        <icon>images/clima.png</icon>
      </clima>
      <audio>
        <icon>images/audio.png</icon>
      </audio>
      <energia>
        <icon>images/energia.png</icon>
      </energia>
      <scenari>
        <icon>images/scenari.png</icon>
      </scenari>
    </layers>
      <page>
        <id>screensaver</id>
        <type>screensaver</type>
        <title>AUI screensaver - clicca per accedere</title>
        <src>images/ascia_logo_home.png</src>
        <page>piani</page>
      </page>      
      <page>    
        <id>piani</id>
        <type>imgmap</type>
        <title>Piani</title>
        <src>custom/images/assonometria320x370.png</src>
        <area>
          <title>Piani</title>
          <coords>0,0,60,60</coords>
          <page>screensaver</page>
        </area>
        <area>
          <title>Primo piano</title>
          <coords>0,0,320,120</coords>
          <page>pianoT</page>
        </area>
        <area>
          <title>Piano terra</title>
          <coords>0,121,320,240</coords>
          <page>pianoT</page>
        </area>
        <area>
          <title>Seminterrato</title>
          <coords>0,241,320,370</coords>
          <page>pianoT</page>
        </area>
      </page>      
      <page>    
        <id>pianoT</id>
        <type>map</type>
        <map>main</map>
      </page>
    <map>
      <id>test</id>
      <control>
        <id>test</id>
        <type>light</type>
      </control>
    </map>
    <map>
      <id>main</id>
			<title>Mappa piano terra</title>
			<src>custom/images/planimetria-big.png</src>
      	<control>
  	      <id>back</id>
  	      <title>Torna alla selezione dei piani</title>
	        <type>page</type>
	        <page>piani</page>
        	<left>0</left>
        	<top>0</top>
	      </control>      
  	    <control>
	        <id>lc</id>
  	      <title>Luce camera</title>
  	      <type>light</type>
      	  <layer>illuminazione</layer>
        	<left>150</left>
        	<top>160</top>
	        <address>0.3:Out5</address>
  	    </control>      
    	  <control>
	        <id>tc</id>
  	      <title>Tapparella camera</title>
  	      <type>blind</type>
      	  <layer>serramenti</layer>
      	  <left>145</left>
        	<top>50</top>
	        <addressup>0.3:Out1</addressup>
	        <addressdown>0.3:Out2</addressdown>
  	    </control>      
  	    <control>
	        <id>lb</id>
  	      <title>Luce bagno</title>
  	      <type>light</type>
      	  <layer>illuminazione</layer>
        	<left>280</left>
        	<top>150</top>
	        <address>0.3:Out5</address>
  	    </control>      
    	  <control>
	        <id>bb</id>
  	      <title>Tapparella bagno</title>
  	      <type>blind</type>
      	  <layer>serramenti</layer>
      	  <left>295</left>
        	<top>50</top>
	        <addressup>0.3:Out1</addressup>
	        <addressdown>0.3:Out2</addressdown>
  	    </control>      
  	    <control>
	        <id>m1l2</id>
  	      <title>Luce scale</title>
  	      <type>dimmer</type>
      	  <layer>illuminazione</layer>
        	<left>100</left>
        	<top>300</top>
	        <address>0.5:Out0</address>
  	    </control>      
    </map>
  </AUI>
</jais>
